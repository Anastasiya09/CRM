<% unless @errors %>
  <% if @status.for_type == 'sale' %>
    var $statuses = $('#statuses')
  <% else %>
    var $statuses = $('#statuses_c')
  <% end %>

  var $tr = $(document.createElement('tr')),
      $statusInp = $('.new-status');
    
  $tdName = $(document.createElement('td'));
  $tdName.text('<%= @status.name %>');
  $tdName.addClass('editable-name');
  $tdEdit = $(document.createElement('td')).append('<%= image_tag('edit.png', class: 'edit') %>' );
  $tdEdit.addClass('text-center')
  $tdRemove = $(document.createElement('td')).append('<%= get_remove_link(status_path(@status), @status.id, "status_id") %>');
  $tdRemove.addClass('text-center')
  $tr.attr('name', 'status');
  $tr.attr('id', 'status_' + <%= @status.id %> )
  $tr.attr('value', <%= @status.id %>);
  $tr.append($tdName);
  $tr.append($tdEdit);
  $tr.append($tdRemove);
  $statuses.append($tr);
  $statusInp.val('');
<% else %>
  var $notifier = $('.notifier');
  error('<%= @errors[0] %>', $notifier);
<% end %>
