<% unless @errors %> 
  var $statuses = $('#sources'),
      $tr = $(document.createElement('tr')),
      $statusInp = $('.new-source');

  $tdName = $(document.createElement('td'));
  $tdName.text('<%= @source.name %>');
  $tdName.addClass('editable-name');
  $tdEdit = $(document.createElement('td')).append('<%= image_tag('edit.png', class: 'edit')%>' );
  $tdEdit.addClass('text-center')
  $tdRemove = $(document.createElement('td')).append('<%= get_remove_link(source_path(@source), @source.id, "source_id" )%>');
  $tdRemove.addClass('text-center')
  $tr.attr('name', 'source');
  $tr.attr('id', 'source_' + <%= @source.id %> )
  $tr.attr('value', <%= @source.id %>);
  $tr.append($tdName);
  $tr.append($tdEdit);
  $tr.append($tdRemove);
  $statuses.append($tr);
  $statusInp.val('');
<% else %>
  var $notifier = $('.notifier');
  error('<%= @errors[0] %>', $notifier);
<% end %>
