<div class='row content'>
  <div class='container-fluid'>
    <div class='row'>
      <div class='admin-sub-menu'>  
          <ul class='admin-sub-menu-items_list'>
            <li>
              <a href="#users" data-toggle="tab">
                <i class='glyphicon glyphicon-user'></i>
                <span>Users</span>
              </a >
            </li>
            <li>
              <a href="#plans" data-toggle="tab">
                <i class='glyphicon glyphicon-list-alt'></i>
                <span>Plans</span>
              </a>
            </li>
            <li>
              <a href="#controls" data-toggle="tab">
                <i class='glyphicon glyphicon-wrench'></i>
                <span>Controls</span>
              </a>
            </li>
          </ul>
      </div>
    </div>


    <div class='row admin-content'>
      <div class='col-lg-2 col-md-2 col-sm-2 content'>
        <div class='admin-room-content-left-column'>

          <div class="tab-content">
            <div class="tab-pane active" id="users">
              <div class="panel-group" id="accordionOne">  
                <div class="panel panel-default">
                  <div class="panel-heading main-panel-heading">
                    <h4 class="panel-title">
                      <a data-toggle="collapse" data-parent="#accordionOne" href="#collapseOne">
                        Active Users
                      </a>
                    </h4>
                  </div>
                  <div id="collapseOne" class="panel-collapse collapse in">
                    <div class="panel-body">
                      <div class="panel panel-default">              
                        <div class="panel-heading">
                          <h4 class="panel-title">
                            <a href="#active-users-all" data-toggle="tab">
                              All
                            </a>
                          </h4>
                        </div>
                      </div>
                      <div class="panel panel-default">              
                        <div class="panel-heading">
                          <h4 class="panel-title">
                            <a href="#active-users-sellers" data-toggle="tab">
                              Sellers
                            </a>
                          </h4>
                        </div>
                      </div>
                      <div class="panel panel-default">              
                        <div class="panel-heading">
                          <h4 class="panel-title">
                            <a href="#active-users-hh" data-toggle="tab">
                              HH
                            </a>
                          </h4>
                        </div>
                      </div>
                      <div class="panel panel-default">              
                        <div class="panel-heading">
                          <h4 class="panel-title">
                            <a href="#active-users-hr" data-toggle="tab">
                              HR
                            </a>
                          </h4>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>                
                <div class="panel-group">
                  <div class="panel panel-default">              
                    <div class="panel-heading main-panel-heading">
                      <h4 class="panel-title">
                        <a href="#banned-users-all" data-toggle="tab">
                          Banned Users
                        </a>
                      </h4>
                    </div>
                  </div>
                </div>             
              </div>
            </div>

            <div class="tab-pane" id="plans">
            </div>

            <div class="tab-pane" id="controls">
              <div class="panel-group" id="accordion">  
                <div class="panel panel-default">
                  <div class="panel-heading main-panel-heading">
                    <h4 class="panel-title">
                      <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
                        Sales Table
                      </a>
                    </h4>
                  </div>
                  <div id="collapseTwo" class="panel-collapse collapse in">
                    <div class="panel-body">
                      <div class="panel panel-default">              
                        <div class="panel-heading">
                          <h4 class="panel-title">
                            <a href="#controls-sales-statuses" data-toggle="tab">
                              Statuses
                            </a>
                          </h4>
                        </div>
                      </div>
                      <div class="panel panel-default">              
                        <div class="panel-heading">
                          <h4 class="panel-title">
                            <a href="#controls-sales-sources" data-toggle="tab">
                              Sources
                            </a>
                          </h4>
                        </div>
                      </div>                     
                    </div>
                  </div>
                </div>
                <div class="panel panel-default">
                  <div class="panel-heading main-panel-heading">
                    <h4 class="panel-title">
                      <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
                        Candidates Table
                      </a>
                    </h4>
                  </div>
                  <div id="collapseThree" class="panel-collapse collapse">
                    <div class="panel-body">
                      <div class="panel panel-default">              
                        <div class="panel-heading">
                          <h4 class="panel-title">
                            <a href="#controls-candidates-statuses" data-toggle="tab">
                              Statuses
                            </a>
                          </h4>
                        </div>
                      </div>
                    </div>
                    <div class="panel-body">
                      <div class="panel panel-default">              
                        <div class="panel-heading">
                          <h4 class="panel-title">
                            <a href="#controls-candidates-sources" data-toggle="tab">
                              Sources
                            </a>
                          </h4>
                        </div>
                      </div>
                    </div>
                    <div class="panel-body">
                      <div class="panel panel-default">              
                        <div class="panel-heading">
                          <h4 class="panel-title">
                            <a href="#controls-candidates-specializations" data-toggle="tab">
                              Specializations
                            </a>
                          </h4>
                        </div>
                      </div>
                    </div>
                    <div class="panel-body">
                      <div class="panel panel-default">              
                        <div class="panel-heading">
                          <h4 class="panel-title">
                            <a href="#controls-candidates-levels" data-toggle="tab">
                              Levels
                            </a>
                          </h4>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>             
              </div>
            </div>
          </div>
        </div> 
      </div>
      <div class='col-lg-10 col-md-10 col-sm-10 content'>
        <div class='admin-room-content-right-column'>
        <%= render 'shared/notifier' %>

          <div class="tab-content">
            <div class="tab-pane active" id="active-users-all">
              <div class='row'>
                <div class='col-lg-12, col-md-12 '>

                  <table id='users-table' class="table table-hover">
                    <thead>
                      <th>First name</th>
                      <th>Last name</th>
                      <th>Email</th>
                      <th>Satus</th>
                      <th>Last sign in at</th>
                    </thead>
                    <tbody>
                      <% User.all_unlock.each do |user| %>
                        <tr>
                          <td><%= user.first_name %></td>
                          <td><%= user.last_name %></td>
                          <td><%= user.email %></td>
                          <td><%= user_status(user) %></td>
                          <td><%= user.current_sign_in_at %></td>
                          <td class="control-field">
                            <%= get_users_control(user) %>
                          </td>
                          <td class="control-field" value='<%= user.id %>'>
                            <% if user != current_user %>
                              <% if user.status == 'lock' %>
                                <div class="lock user-status" name='status' value='unlock' >
                                </div>
                              <% else %>
                                <div class="unlock user-status" name='status' value='lock'>
                                </div>
                              <% end %>
                            <% end %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                  <% unless params[:status]=='lock' %>
                    <button id='add-new-user' class="btn btn-primary pull-right">Send invitation for new user</button>  
                  <% end %> 
                </div>
              </div>
              <% unless params[:status]=='lock' %>
                <div id='new-user-dialog' class="deadlock">
                  <%= form_for :@user, url: admin_registration_index_path(@user),  html: { id: 'new-user-form' } do |f| %>
                    <div class="error" >
                      <div id="error_explanation">
                      </div>
                    </div>

                    <div class="control-field">
                      <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
                    </div>

                    <div class="control-field">
                      <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
                    </div>

                    <div class="control-field">
                      <%= f.text_field :email, class: 'form-control', placeholder: 'Email'  %>
                    </div>

                    <div class="control-field">
                      <%= f.radio_button :role, 'seller', :checked => true %> 
                      <%= label :role_seller, 'Seller' %>
                      <%= f.radio_button :role, 'hh' %>
                      <%= label :role_seller, 'HH' %>
                      <%= f.radio_button :role, 'hr' %>
                      <%= label :role_seller, 'HR' %>
                    </div>

                    <div class="control-field">
                      <%= f.check_box :admin, class: 'check-box-field' %>
                      <%= f.label :admin %>
                    </div>

                    <div class="control-field">
                      <%= f.submit "Send invite", class: "btn btn-large btn-primary", remote: true %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
            <div class="tab-pane" id="active-users-sellers">
              <h1> active-users-sellers</h1>

            </div>
            <div class="tab-pane" id="active-users-hh">
              <h1> active-users-hh</h1>
            </div>
            <div class="tab-pane" id="active-users-hr">
              <h1> active-users-hr</h1>
            </div>
            <div class="tab-pane" id="banned-users-all">
              <h1> banned-users-all </h1>
               <table id='users-table' class="table table-hover">
                <thead>
                  <th>First name</th>
                  <th>Last name</th>
                  <th>Email</th>
                  <th>Satus</th>
                  <th>Last sign in at</th>
                </thead>
                <tbody>
                  <% User.all_lock.each do |user| %>
                    <tr>
                      <td><%= user.first_name %></td>
                      <td><%= user.last_name %></td>
                      <td><%= user.email %></td>
                      <td><%= user_status(user) %></td>
                      <td><%= user.current_sign_in_at %></td>
                      <td class="control-field">
                        <%= get_users_control(user) %>
                      </td>
                      <td class="control-field" value='<%= user.id %>'>
                        <% if user != current_user %>
                          <% if user.status == 'lock' %>
                            <div class="lock user-status" name='status' value='unlock' >
                            </div>
                          <% else %>
                            <div class="unlock user-status" name='status' value='lock'>
                            </div>
                          <% end %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class="tab-pane" id="controls-sales-statuses">
              <h1> controls-sales-statuses</h1>
            </div>
            <div class="tab-pane" id="controls-sales-sources">
              <h1> controls-sales-sources </h1>
            </div>
            <div class="tab-pane" id="controls-candidates-statuses">
              <h1> controls-candidates-statuses </h1>
            </div>
            <div class="tab-pane" id="controls-candidates-sources">
              <h1> controls-candidates-sources </h1>
            </div>
            <div class="tab-pane" id="controls-candidates-specializations">
              <h1> controls-candidates-specializations </h1>
            </div>
            <div class="tab-pane" id="controls-candidates-levels">
              <h1> controls-candidates-levels </h1>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>