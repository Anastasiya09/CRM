<%= content_for(:custom_scripts) do %>
  <%= javascript_include_tag 'chosen.jquery.min' %>
<% end %>

<%= content_for(:sub_menu) do %>
  <%= render "shared/submenus/#{sub_menu_type}" %>
<% end %>

<div class="row content">
  <div class="container-fluid">
    <div class="statistics">
      <%= form_tag change_information_statistics_path(type: @type), remote: true do %>
        <span> From: </span>
        <div class="date">
          <%= text_field_tag :dateFrom, @date_from.strftime("%d-%m-%Y"), id:"dpd1" %><br />
        </div>
        <span> to: </span>
        <div class="date">
          <%= text_field_tag :dateTo, @date_to.strftime("%d-%m-%Y"), id:"dpd2" %><br />
        </div>
        <span> Assign: </span><br/>
        <div class="datestatistic">
          <div class="side-by-side clearfix">
            <%= select_tag("User", options_for_select(find_collect_for_select(@type, "user").collect {|p| [ p.first_name + ' ' + p.last_name , p.id ]}, selected: @option_for_select[:user]),multiple: true, style:"width:100% !important;", class: "chosen-select-user", name: 'user[]', id: 'user', "data-placeholder" => 'Select User ...') %>         
          </div>
        </div>
        <% array_select_field(@type).each do |name|%>
          <%= render partial: "select_for_option", locals: {name: name} %>
        <% end %>
      <% end %>
    </div>

    <div class="graphics">
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('form').submit();
    $('form :input').on('change', function(e){
      $('form').submit();
    })
    $(".chosen-select-user").chosen();
    $(".chosen-select-status").chosen();
    $(".chosen-select-source").chosen()

    var checkin = $('#dpd1').datepicker( {dateFormat: 'dd-mm-yy'});
    var checkout = $('#dpd2').datepicker({ dateFormat: 'dd-mm-yy'});
  });

</script>
