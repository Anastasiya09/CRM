 <table class="table">
  <thead>
    <tr>
      <th> Statuses </th>
      <th> Levels </th>
      <th> Specializations </th>
      <th> Settings </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td id="statuses">
        <% Status.all_candidate.each do |status| %>
          <%= check_box_tag "statuses[]", "#{status.id}", @options.include?(status), id: "s_#{status.id}" %>
          <%= label_tag status.name %>
          <br>
        <% end %>
      </td>
      <td id="levels">
        <% Level.all.each do |level| %>
          <%= check_box_tag "levels[]", "#{level.id}", @options.include?(level), id: "s_#{level.id}" %>
          <%= label_tag level.name %>
          <br>
        <% end %>
      </td>
      <td id="specializations">
        <% Specialization.all.each do |specialization| %>
          <%= check_box_tag "specializations[]", "#{specialization.id}", @options.include?(specialization), id: "s_#{specialization.id}" %>
          <%= label_tag specialization.name %>
          <br>
        <% end %>
      </td>

      <td class="settings">
        <%= check_box_tag "All statuses", "All statuses" %>
        <%= label_tag "All statuses" %>
        <br>
        <%= check_box_tag "All levels", "All leveles" %>
        <%= label_tag "All levels" %>
        <br>
        <%= check_box_tag "All specializations", "All specializations" %>
        <%= label_tag "All specializations" %>
        <br>
      </td>
    </tr>
  </tbody>
</table>
<hr>
<%= select_year(@date, start_year: 2015) %>
<%= select_month(@date) %>
<hr>
<label for="from">The number of tasks for the plan</label>
<%= text_field_tag :count, @plan.count if @plan %>
<hr>