<%= simple_form_for @task do |f| %> 
  <%= f.input :name %>
  <br>
  <%= f.input :source %>
  <br>
  <%= f.input :skype %>
  <br>
  <%= f.input :email %>
  <br>
  <%= f.input :links %>
  <br>
  <%= f.input :date %>
  <br>
  <%= f.association :user %>
  <br>
  <%= f.label :status %>
  <%= f.select :status, Task.status.options %>
  <br>
  <%= f.submit "Create" %>
<% end %>