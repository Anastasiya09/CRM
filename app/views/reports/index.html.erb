<%= content_for(:custom_scripts) do %>
  <%= javascript_include_tag 'reports' %>
  <%= javascript_include_tag 'chosen.jquery.min' %>
<% end %>
<div class="row content">
  <div class="col-lg-6 col-md-8 col-lg-offset-3 col-md-offset-2" id="report"> 
    <div id="modal_report">
    </div>

      <button class="add-new btn btn-sm btn-info" id="add"> 
      <i class="glyphicon glyphicon-plus"></i> Add new</button>
      <button id='table-settings' class='btn btn-sm btn-success inline-block'>
        <i class='glyphicon glyphicon-cog'> </i>
      </button>
      <input id="date-picker-month" name="startDate" id="startDate" class="date-picker" value='<%= @date.strftime("%b/%Y") %>' />
      <label id="label-month" for="startDate">Month :</label>



      <table class="table table-hover">
        <thead>
          <tr>
            <%= generate_sortable_th_desc('sort context','Date',:date) %>
            <th> Project </th>
            <th> Task </th>
            <th> Hours </th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @reports.each do |report|%>
            <tr class="report" id='<%= report.id %>'>
              <td> <%= report.date %>
              </td>
              <td> <%= report.project.name %>
              </td>
              <td> <%= report.task %>
              </td>
              <td> <%= report.hours %>
              </td>
              <td class="edit" id-object='<%= "#{report.id}" %>'> <%= image_tag('edit.png', class: 'edit') %> 
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

  </div>
</div>

<div id='table-settings-dialog'>
  <div id='invisible'>
    <label>Assign</label>
    <ul id='invisible-fields' class='connectedSortable'>
    </ul>
  </div>
  <div id='visible'>
    <label>Not Assign</label>
    <ul id='visible-fields' class='connectedSortable'>
    </ul>
  </div>
</div>
