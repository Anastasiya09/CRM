<%= form_for(@report, remote: true) do |f| %>
  <div class="modal-body">
    <ul class='errors'></ul>
    <div class="control-field">
      <%= f.text_field :date, readonly: true, class: 'form-control control-small report-datepicker', value: @report.date.strftime("%d.%m.%Y") %>
      <%= f.number_field :hours, value: @report.hours,class: 'form-control control-small pull-right', step: 'any', placeholder: 'Hours'%>
    </div>
    <div class="side-by-side clearfix">
      <%= f.select :project_id, @user.projects.all_active.collect {|p| [ p.name, p.id ]}, class: "chosen-select", name: 'project_id', id: 'project_id', "data-placeholder" => 'Select Project ...' %>
    </div>
    <div class="control-field">
      <%= f.text_area :task, value: @report.task, class: 'form-control task-description', placeholder: 'Task description'%>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit "Save", class: "btn btn-large btn-primary btn-block" %>
  </div>
<% end %>

<script type="text/javascript">
  $("#report_project_id").chosen();
</script>
