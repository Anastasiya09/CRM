<%= content_for(:custom_scripts) do %>
  <%= javascript_include_tag 'reports' %>
<% end %>
<div class="modal fade" id="myModal_edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Update report</h4>
      </div>
        <%= form_for(@report, url: report_path) do |f| %>
          <div class="modal-body">
            <div class="control-field">
              <%= f.text_field :date, class: 'form-control', value: @report.date, id:"dpd2" %>
            </div>
            <div class="control-field">
              <%= f.text_field :project, class: 'form-control', placeholder: 'Project', value: @report.project%>
            </div>
            <div class="control-field">
              <%= f.text_field :task, value: @report.task, class: 'form-control', placeholder: 'Task'%>
            </div>
            <div class="control-field">
              <%= f.number_field :hours, value: @report.hours, class: 'form-control', min: 0, placeholder: 'Hours'%>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.submit "Update", class: "btn btn-large btn-primary btn-block" %>
          </div>
        <% end %>
    </div>
  </div>
</div>